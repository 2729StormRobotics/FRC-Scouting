<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.master"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.master.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.master.fragments.ScannerFragment"
            android:label="@string/title_activity_scanner_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.DownloadFragment"
            android:label="@string/title_activity_download_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.DataFragment"
            android:label="@string/title_activity_data_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.DriverFragment"
            android:label="@string/title_activity_driver_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.RankingFragment"
            android:label="@string/title_activity_ranking_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.AutoFragment"
            android:label="@string/title_activity_auto_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.AssistsFragment"
            android:label="@string/title_activity_assists_fragment" >
        </activity>
        <activity
     	 	android:name="com.example.master.fragments.CycleFragment"
            android:label="@string/title_activity_cycle_fragment" >
        </activity>
        <activity
      		android:name="com.example.master.fragments.TrussShotFragment"
            android:label="@string/title_activity_truss_shot_fragment" >
        </activity>
        <activity
            android:name="com.example.master.fragments.GoalsFragment"
            android:label="@string/title_activity_goals_fragment" >
        </activity>
    </application>

</manifest>
